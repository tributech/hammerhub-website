---
interface Props {
  title: string;
  description?: string;
}

const gaId = import.meta.env.PUBLIC_GA_ID;
const {
  title,
  description = 'Host tournaments & manage army lists for Warhammer: The Old World, 40K, Age of Sigmar and more. Native iOS & Android apps. Currently powering Old World Rankings.',
} = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, 'https://www.hammerhub.com').href;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#1a1a2e" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content="Tournament hosting, army lists &amp; live rankings for Warhammer: The Old World, 40K, Age of Sigmar and more. Native iOS &amp; Android." />
    <meta property="og:site_name" content="HammerHub" />
    <meta property="og:image" content="https://www.hammerhub.com/images/opengraph.png" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content="Tournament hosting, army lists &amp; live rankings for Warhammer: The Old World, 40K, Age of Sigmar and more. Native iOS &amp; Android." />
    <meta name="twitter:image" content="https://www.hammerhub.com/images/opengraph.png" />
    <link rel="canonical" href={canonicalURL} />

    <link rel="preload" href="/images/hammerhub-logo.png" as="image" />
    <link rel="preload" href="/images/hero-bg.jpg" as="image" />
    <link rel="preload" href="/images/hero-bg-2.jpg" as="image" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png" />
    <link rel="icon" type="image/png" sizes="192x192" href="/android-chrome-192x192.png" />
    <link rel="apple-touch-icon" sizes="57x57" href="/apple-touch-icon.png" />
    <link rel="apple-touch-icon" sizes="76x76" href="/apple-touch-icon-76x76.png" />
    <link rel="apple-touch-icon" sizes="120x120" href="/apple-touch-icon-120x120.png" />
    <link rel="apple-touch-icon" sizes="152x152" href="/apple-touch-icon-152x152.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon-180x180.png" />
    <link rel="shortcut icon" href="/favicon.ico" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&family=Alfa+Slab+One&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>

    <style is:global>
      @import '../styles/global.css';
    </style>

    {
      gaId && (
        <>
          <script is:inline async src={`https://www.googletagmanager.com/gtag/js?id=${gaId}`} />
          <script is:inline define:vars={{ gaId }}>
            window.dataLayer = window.dataLayer || [];
            function gtag() { dataLayer.push(arguments); }
            gtag('js', new Date());
            gtag('config', gaId);
          </script>
        </>
      )
    }
  </head>
  <body class="font-sans antialiased">
    <slot />
  </body>
</html>

---
interface Props {
  title: string;
  description?: string;
}

const gaId = import.meta.env.PUBLIC_GA_ID;
const {
  title,
  description = 'HammerHub is the ultimate platform for tabletop gaming. Rankings, tournaments, army lists, and community — all in one place. Currently powering Old World Rankings.',
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#1a1a2e" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content="Rankings, tournaments, army lists, and community — all in one place." />
    <meta property="og:site_name" content="HammerHub" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content="Rankings, tournaments, army lists, and community — all in one place." />

    <link rel="preload" href="/images/hammerhub-logo.png" as="image" />
    <link rel="preload" href="/images/hero-bg.jpg" as="image" />
    <link rel="icon" href="/favicon.ico" sizes="any" />

    <!-- Geist font via Vercel CDN -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&family=Alfa+Slab+One&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>

    <style is:global>
      @import '../styles/global.css';
    </style>

    {
      gaId && (
        <>
          <script is:inline async src={`https://www.googletagmanager.com/gtag/js?id=${gaId}`} />
          <script is:inline define:vars={{ gaId }}>
            window.dataLayer = window.dataLayer || [];
            function gtag() { dataLayer.push(arguments); }
            gtag('js', new Date());
            gtag('config', gaId);
          </script>
        </>
      )
    }
  </head>
  <body class="font-sans antialiased">
    <slot />
  </body>
</html>

---

<section class="relative flex min-h-svh items-center justify-center overflow-hidden px-6">
  <!-- Hero backgrounds â€” crossfade between the two -->
  <img
    id="hero-bg-1"
    alt=""
    class="object-cover transition-opacity duration-[2000ms]"
    style="position:absolute;height:100%;width:100%;left:0;top:0;right:0;bottom:0;color:transparent;opacity:1"
    src="/images/hero-bg.jpg"
  />
  <img
    id="hero-bg-2"
    alt=""
    class="object-cover transition-opacity duration-[2000ms]"
    style="position:absolute;height:100%;width:100%;left:0;top:0;right:0;bottom:0;color:transparent;opacity:0"
    src="/images/hero-bg-2.jpg"
  />
  <!-- Dark overlay -->
  <div class="absolute inset-0 bg-background/85" aria-hidden="true"></div>

  <div class="relative z-10 mx-auto max-w-4xl text-center">
    <!-- Large logo -->
    <div class="mb-8">
      <img
        src="/images/hammerhub-logo.png"
        alt="HammerHub logo"
        class="mx-auto h-52 w-52 invert md:h-64 md:w-64 lg:h-72 lg:w-72"
      />
    </div>

    <!-- Badge -->
    <div class="mb-8 inline-flex items-center gap-2 rounded-full border border-border bg-secondary/60 px-4 py-2 text-sm text-muted-foreground backdrop-blur-sm">
      <span class="relative flex h-2 w-2">
        <span class="absolute inline-flex h-full w-full animate-ping rounded-full bg-primary opacity-75"></span>
        <span class="relative inline-flex h-2 w-2 rounded-full bg-primary"></span>
      </span>
      Powering Old World Rankings
    </div>

    <!-- Headline -->
    <h1 class="mb-6 text-balance text-4xl font-bold tracking-tight text-foreground md:text-6xl">
      The platform for <span class="text-primary">all tabletop games</span>
    </h1>

    <!-- Subheadline -->
    <p class="mx-auto mb-10 max-w-2xl text-pretty text-lg leading-relaxed text-muted-foreground">
      Rankings. Tournaments. Army lists. Community tools. Everything your game system needs, all under one roof.
    </p>

    <!-- CTAs -->
    <div class="flex flex-col items-center justify-center gap-4 sm:flex-row">
      <a
        href="#notify"
        class="inline-flex h-12 items-center rounded-lg bg-primary px-8 text-sm font-semibold text-primary-foreground shadow-[0_0_30px_rgba(0,200,220,0.5),0_0_60px_rgba(0,200,220,0.2)] transition-all hover:bg-primary/85 hover:shadow-[0_0_40px_rgba(0,200,220,0.7),0_0_80px_rgba(0,200,220,0.3)]"
      >
        Get notified at launch
      </a>
      <a
        href="https://oldworldrankings.com"
        target="_blank"
        rel="noopener"
        class="inline-flex h-12 items-center rounded-lg border border-border bg-secondary px-8 text-sm font-semibold text-secondary-foreground transition-colors hover:bg-secondary/70"
      >
        Visit Old World Rankings
      </a>
    </div>
  </div>
</section>

<script>
  const bg1 = document.getElementById('hero-bg-1') as HTMLElement;
  const bg2 = document.getElementById('hero-bg-2') as HTMLElement;
  let showing1 = true;

  setInterval(() => {
    if (showing1) {
      bg1.style.opacity = '0';
      bg2.style.opacity = '1';
    } else {
      bg1.style.opacity = '1';
      bg2.style.opacity = '0';
    }
    showing1 = !showing1;
  }, 6000);
</script>
